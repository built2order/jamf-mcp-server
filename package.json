{
  "name": "jamf-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Jamf Pro device management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "jamf-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "serve": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["mcp", "jamf", "mdm", "apple", "device-management"],
  "author": "dbankscard",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbankscard/jamf-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/dbankscard/jamf-mcp-server/issues"
  },
  "homepage": "https://github.com/dbankscard/jamf-mcp-server#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.8.0",
    "tsx": "^4.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0"
  }
}